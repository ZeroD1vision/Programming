{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Create lib.o",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-c",
                "${fileDirname}\\lib\\lib.cpp",
                "-o",
                "${fileDirname}\\lib\\compiled\\lib.o"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Create lib.a",
            "command": "ar",
            "args": [
                "rcs",
                "${fileDirname}\\lib\\compiled\\lib.a",
                "${fileDirname}\\lib\\compiled\\lib.o"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "Create lib.o"
            ]
        },
        {
            "type": "shell",
            "label": "Build main with lib.a",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}\\${fileBasenameNoExtension}.cpp",
                "${fileDirname}\\lib\\compiled\\lib.a",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "dependsOn": [
                "Create lib.a"
            ]
        },
        {
            "type": "shell",
            "label": "Clean",
            "command": "cmd",
            "args": [
                "/c",
                "del",
                "/q",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${fileDirname}\\lib\\compiled\\lib.o",
                "${fileDirname}\\lib\\compiled\\lib.a"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "Task generated by Debugger."
        }
    ]
}



